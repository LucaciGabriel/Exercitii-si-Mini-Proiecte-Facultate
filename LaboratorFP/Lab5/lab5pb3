
#include <stdio.h>
#include <math.h>

int main()
{
    long int i,n,suma=0,prod=1;
    scanf("%ld",&n);
    for(i=1;i<=n;i++)
    {
        suma=suma+i;
        prod=prod*i;
    }
    printf("Suma primelor %ld numere naturale este %ld\n",n,suma);
    printf("Produsul primelor %ld numere naturale este %ld",n,prod);
    return 0;
    
}
